<view class="container">

<view class="drawer_screen" bindtap="powerDrawer" data-statu="close" wx:if="{{showModalStatus}}"></view> 

<view animation="{{animationData}}" class="drawer_box" wx:if="{{showModalStatus}}">  
  
  <!--drawer content-->  
  <view class="drawer_title">输入数量</view>  
  <view class="drawer_content">  
    <view class="top grid">  
      <label class="title col-0">账号</label>  
      <input class="input_base input_h30 col-1" name="phone" value="{{phone}}" bindinput="binphone" type='digit'></input>  
    </view>  
    <view class="top grid">  
      <label class="title col-0">密码</label>  
      <input class="input_base input_h30 col-1" name="password" value="{{password}}" bindinput="binpassword" type='digit'></input>  
    </view>  
     
  </view>  
  <view class="btn_ok" bindtap="powerDrawer" data-statu="close">确定</view>  
</view> 


    <form bindsubmit="pay">
      <view class= "info_list">
<block wx:for="{{goods_info}}" xw:for-item="item" wx:for-index="index">

<view class="goods_item">
    
  <image class="goods_image" src="{{item.icon}}"></image>
 
    <view class="price">
      {{item.price}} 元/个
    </view>  

<view class="stepper">  
    <!-- 减号 -->  
    <image class="{{item.minusStatus}}" bindtap="bindMinus" data-index="{{index}}" src="../../images/minus.png" mode="widthFix"></image>
    <!-- 数值 -->     
    <view type="number" class='{{item.countStatus}}' bindtap='powerDrawer' data-statu='open' data-index="{{index}}" >{{item.count}}
    </view> 
    <!-- 加号 -->  
    <image class="normal" bindtap="bindPlus" data-index="{{index}}" src="../../images/plus.png" mode="widthFix"></image>
</view>  

 </view>
 </block>
</view>

<view class='summary'>

<view class='statistics'>

<image class='shopping' src='../../images/shopping.png' mode='widthFix'></image> 

<text class='statistics_text'>￥: {{summary}}</text>

</view>

<button class="pay" formType="submit">支付</button>
</view>
</form>






</view>
